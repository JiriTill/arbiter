# ============================================
# The Arbiter - Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER COMMIT .env to Git!

# Environment
ENVIRONMENT=development
DEBUG=true

# Supabase
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database (get from Supabase Dashboard → Settings → Database)
DATABASE_URL=postgresql://postgres.YOUR_PROJECT:YOUR_PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Redis (optional for local dev)
REDIS_URL=redis://localhost:6379

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Daily budget limit for OpenAI API costs (USD)
DAILY_BUDGET_USD=10.0
